{
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
          "modules": true
      }
  },
  "extends": ["airbnb", "prettier"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "import/first": [ "off", "DISABLE-absolute-first" ],
    "jsx-a11y/anchor-is-valid": ["off"],
    "no-param-reassign": ["off"],
    "no-inner-declarations": ["off"],
    "react/forbid-prop-types": ["off"],
    "linebreak-style": ["off"]
  },
  "env": {
    "browser": true,
    "node": true
  }
}
